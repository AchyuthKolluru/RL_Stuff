<mujoco model="g1_inspire_can_scene">
  <compiler angle="radian" coordinate="local"/>
  <!-- Include your robot model -->
  <include file="g1_29dof_with_hand_rev_1_0.xml"/>

  <!-- Softer, more stable physics -->
  <option timestep="0.0015" iterations="150" tolerance="1e-10" cone="elliptic"/>

  <worldbody>
    <!-- No floor/light here; they live in the robot XML to avoid duplicates -->

    <!-- STATIC can directly under worldbody -->
    <!-- can + visualization sites (REPLACE your existing can_body block with this) -->
    <body name="can_body" pos="0.42 -0.03 1.03">
      <!-- Physical can with collisions -->
      <geom name="can_geom" type="cylinder" size="0.03 0.06"
            rgba="0.9 0.6 0.2 1"
            friction="1.0 0.005 0.0001"
            contype="1" conaffinity="1"
            margin="0.002" solimp="0.95 0.99 0.001" solref="0.005 1"/>

      <!-- (Optional) allow randomization by uncommenting -->
      <!-- <joint name="can_free" type="free"/> -->

      <!-- ===== VISUALIZATION SITES =====
          Grey = center (reference only)
          Green = surface marker (outside the can, +Y)
          Red   = standoff markers (radius + standoff) on Â±Y
      -->
      <!-- Center (reference) -->
      <site name="can_center" pos="0 0 0" size="0.004" type="sphere" rgba="0.6 0.6 0.6 0.5"/>

      <!-- This is the site your env currently reads: move it OUTSIDE the can surface.
          radius = 0.03; put it at 0.03 + 0.006 margin = 0.036 on +Y so it's clearly visible. -->
      <site name="can_site" pos="0 0.036 0" size="0.005" type="sphere" rgba="0.2 0.9 0.2 1"/>

      <!-- Standoff markers (what the reward aims for: no-touch, close approach).
          If your env standoff is 0.02, radius+standoff = 0.05 from center.
          Put one on each lateral side so you can see both targets. -->
      <site name="standoff_right" pos="0 0.05 0" size="0.005" type="sphere" rgba="0.9 0.2 0.2 1"/>
      <site name="standoff_left"  pos="0 -0.05 0" size="0.005" type="sphere" rgba="0.9 0.2 0.2 1"/>
    </body>

    <!-- If you want randomizable can pose, uncomment the free joint -->
    <!-- <joint name="can_free" type="free"/> -->
  </worldbody>
</mujoco>