<mujoco model="g1_inspire_can_scene">
  <compiler angle="radian" coordinate="local"/>
  <!-- Include your robot model -->
  <include file="g1_29dof_with_hand_rev_1_0.xml"/>

  <!-- Softer, more stable physics -->
  <option timestep="0.0015" iterations="150" tolerance="1e-10" cone="elliptic"/>

  <worldbody>
    <!-- No floor/light here; they live in the robot XML to avoid duplicates -->

    <!-- STATIC can directly under worldbody -->
    <body name="can_body" pos="0.42 -0.03 1.03">
    <!-- Solid, high-priority contact on bit-1, small margin to avoid tunneling -->
    <geom name="can_geom" type="cylinder" size="0.03 0.06"
          rgba="0.9 0.6 0.2 1"
          contype="1" conaffinity="1" condim="3" priority="1"
          friction="1.0 0.01 0.0001"
          margin="0.003"
          solimp="0.99 0.999 0.0005"
          solref="0.002 1"/>

    <site name="can_site" pos="0 0 0" size="0.005" type="sphere" rgba="0.2 0.8 0.2 1"/>
    <!-- If you want it movable for randomization, uncomment the free joint: -->
    <!-- <joint name="can_free" type="free"/> -->
  </body>
  </worldbody>
</mujoco>