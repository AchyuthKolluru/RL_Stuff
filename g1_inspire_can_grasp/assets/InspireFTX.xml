                      </body>
                    </body>
                  </body>
                </body>
              </body>
            </body>

            <!-- ================= RIGHT ARM ================= -->
            <body name="right_shoulder_pitch_link" pos="0.0039563 -0.10021 0.24778" quat="0.990264 -0.139201 0 0">
