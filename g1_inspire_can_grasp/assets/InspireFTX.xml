<mujoco model="g1_InspireFTX">
  <compiler angle="radian" meshdir="meshes"/>

  <!-- numerics: tighter contacts; dense jacobian helps IK and manipulation -->
  <option timestep="0.002" integrator="Euler" cone="pyramidal"
          jacobian="dense" iterations="120" tolerance="1e-9"
          impratio="5"/>

  <!-- contact defaults (slightly stiff and a thin margin to avoid deep interpenetration) -->
  <default>
    <default class="col">
      <geom solref="0.002 1" solimp="0.9 0.95 0.002" margin="0.001"/>
    </default>

    <!-- Hand digits: collide (bit 1), gentle damping -->
    <default class="digit">
      <joint damping="0.05" armature="0.002" stiffness="0"/>
      <geom class="col" type="capsule" size="0.008" rgba="0.85 0.85 0.85 1"
            density="800" friction="1.2 0.01 0.0001"
            contype="1" conaffinity="6"/> <!-- collide with bits 2 (torso) and 4 (arms) -->
    </default>

    <!-- Palms: collide (bit 1) -->
    <default class="palm">
      <geom class="col" type="box" rgba="0.75 0.75 0.75 1"
            size="0.03 0.025 0.008"
            friction="1.0 0.01 0.0001"
            contype="1" conaffinity="6"/>
    </default>

    <!-- Arms: collide (bit 4) with hands (1) and torso (2) -->
    <default class="armcol">
      <geom class="col" type="capsule" size="0.025" rgba="0.2 0.6 0.9 0.15"
            density="0" contype="4" conaffinity="3"/>
    </default>

    <!-- Torso: collide (bit 2) with hands (1) and arms (4) -->
    <default class="torsocol">
      <geom class="col" type="box" rgba="0.1 0.7 0.1 0.05"
            density="0" contype="2" conaffinity="5"/>
    </default>
  </default>

  <!-- Visual meshes (keep only what we use here: torso/arms) -->
  <asset>
    <!-- torso -->
    <mesh name="torso_link" file="torso_link_rev_1_0.STL"/>
    <mesh name="logo_link"  file="logo_link.STL"/>
    <mesh name="head_link"  file="head_link.STL"/>

    <!-- left arm -->
    <mesh name="left_shoulder_pitch_link" file="left_shoulder_pitch_link.STL"/>
    <mesh name="left_shoulder_roll_link"  file="left_shoulder_roll_link.STL"/>
    <mesh name="left_shoulder_yaw_link"   file="left_shoulder_yaw_link.STL"/>
    <mesh name="left_elbow_link"          file="left_elbow_link.STL"/>
    <mesh name="left_wrist_roll_link"     file="left_wrist_roll_link.STL"/>
    <mesh name="left_wrist_pitch_link"    file="left_wrist_pitch_link.STL"/>
    <mesh name="left_wrist_yaw_link"      file="left_wrist_yaw_link.STL"/>

    <!-- right arm -->
    <mesh name="right_shoulder_pitch_link" file="right_shoulder_pitch_link.STL"/>
    <mesh name="right_shoulder_roll_link"  file="right_shoulder_roll_link.STL"/>
    <mesh name="right_shoulder_yaw_link"   file="right_shoulder_yaw_link.STL"/>
    <mesh name="right_elbow_link"          file="right_elbow_link.STL"/>
    <mesh name="right_wrist_roll_link"     file="right_wrist_roll_link.STL"/>
    <mesh name="right_wrist_pitch_link"    file="right_wrist_pitch_link.STL"/>
    <mesh name="right_wrist_yaw_link"      file="right_wrist_yaw_link.STL"/>

    <!-- optional H1 hand base visuals (if you copied them); kept visual-only (contype=0) -->
    <mesh name="L_hand_base_link" file="L_hand_base_link.STL"/>
    <mesh name="R_hand_base_link" file="R_hand_base_link.STL"/>
  </asset>

  <!-- scene -->
